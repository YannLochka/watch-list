<div class="banner banner-index">
    <h1>Save any kind of movies 🍿</h1>
    <p>This is the best app 🤓</p>
    <a class="btn btn-primary" href="#">Start</a>
</div>
  <div class="container">
<ul>
<div class="cards">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <li class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>)">
    <% else %>
      <li class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path "popcorn", height: 300, width: 400, crop: :fill %>)">
    <% end %>
        <p><%= link_to(list.name, list_path(list)) %></p>
    </li>
  <% end %>
  </div>
</ul>


</div>

<br>
<div class="button">
<%= link_to("Create a new list 🪄", new_list_path, class: "btn btn-dark") %>
</div>
